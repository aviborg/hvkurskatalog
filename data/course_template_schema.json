{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/course-template.json",
  "title": "CourseTemplate",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier, lowercase with hyphens."
    },
    "name": {
      "type": "string",
      "description": "Full course name in Swedish."
    },
    "shortName": {
      "type": ["string", "null"],
      "description": "Established short name or abbreviation (e.g., GC1, GC12, GKÃ–LAK, TCCC-CLS)."
    },
    "category": {
      "type": "string",
      "description": "Course category (e.g., Chefsutbildningar, Funktionsutbildningar)."
    },
    "courseCode": {
      "type": ["string", "null"],
      "description": "Official course code if available."
    },
    "description": {
      "type": "string",
      "description": "Verbatim course description."
    },
    "targetAudience": {
      "type": "string",
      "description": "Who the course is intended for."
    },
    "syllabus": {
      "type": "string",
      "description": "Course content or syllabus."
    },
    "purpose": {
      "type": "string",
      "description": "Purpose of the course."
    },
    "primaryLearningObjective": {
      "type": "string",
      "description": "Primary learning objective after completing the course."
    },
    "secondaryLearningObjectives": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Secondary learning objectives."
    },
    "examination": {
      "type": "string",
      "description": "How the course is examined."
    },
    "prerequisites": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Prerequisites for participation."
    },
    "literature": {
      "type": ["string", "array"],
      "items": { "type": "string" },
      "description": "Required or recommended literature."
    },
    "additionalInfo": {
      "type": ["string", "null"],
      "description": "Additional information."
    },
    "typicalDuration": {
      "type": "string",
      "description": "Typical duration in days."
    },
    "courseResponsible": {
      "type": "string",
      "description": "Responsible organization (no spaces, e.g., HvSS, MRM)."
    },
    "baseTemplateIds": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "IDs of base templates covered by this template (for merged courses)."
    },
    "sourceFiles": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Source PDF files."
    },
    "lastModifiedBy": {
      "type": "string",
      "description": "Identifier of who last modified the template (e.g. gpt-4.1)."
      },
    "lastModified": {
      "type": "string",
      "pattern": "^\\d{8}-\\d{6}$",
      "description": "Timestamp of last modification in YYYYMMDD-hhmmss format."
    }
  },

  "required": [
    "id",
    "name",
    "shortName",
    "category",
    "courseCode",
    "description",
    "targetAudience",
    "syllabus",
    "purpose",
    "primaryLearningObjective",
    "secondaryLearningObjectives",
    "examination",
    "prerequisites",
    "literature",
    "additionalInfo",
    "typicalDuration",
    "courseResponsible",
    "baseTemplateIds",
    "sourceFiles"
  ]
}
